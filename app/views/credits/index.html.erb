<p id="notice"><%= notice %></p>

<h1>Depósitos</h1>
<% if @credits.blank? %>
  <br>
  <h3>Ops.. Não foi realizado nenhum deposito ate o momento.</h3>
<% else %>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Deposito em:</th>
      <th scope="col">Valor</th>
      <th scope="col">Status</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.created_at.strftime("%b, %m %Y - %H:%M") %></td>
        <td><%= credit.value %></td>
        <td><%= credit.status %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'Depositar', new_credit_path, class: 'btn btn-primary' %>
